{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Application": {
    "Name": "Employee Management System",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "FileStorage": {
    "DataPath": "App_Data",
    "LogPath": "Logs",
    "MaxFileSize": "10MB"
  },
  "Pagination": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  }
}